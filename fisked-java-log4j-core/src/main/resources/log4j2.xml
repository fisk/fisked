<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <File name="File" fileName="/tmp/fisked.log" append="false">
      <PatternLayout pattern="%d{MM-dd-yyyy HH:mm:ss,SSS} %-5p [%t] %C{2}: %m%n"/>
    </File>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss,SSS} %-5p [%t] %C{2} (%F:%L): %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="File"/>
    </Root>
    <Logger name="org.fisked.util.ConsolePrinter">
      <AppenderRef ref="STDOUT"/>
    </Logger>
  </Loggers>
</Configuration>