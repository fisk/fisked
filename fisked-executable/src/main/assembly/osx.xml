<assembly>
  <id>osx-assembly</id>
  <formats>
    <format>jar</format>
  </formats>

  <fileSets>
    <fileSet>
		<directory>${basedir}/../jcurses-native/osx/target</directory>
        <outputDirectory></outputDirectory>
        <includes>
            <include>*.dll</include>
            <include>*.so</include>
            <include>*.jnilib</include>
            <include>*.dylib</include>
        </includes>
<useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
  </fileSets>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
	  <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
	  <outputDirectory>/</outputDirectory>
      <scope>runtime</scope>
      <excludes>
          <exclude>*:natives-*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
